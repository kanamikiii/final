<%= form_for(@entry) do |f| %>
  <h1>New Entry</h1>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :title, placeholder: "New title..." %>
  </div>
  <div class="field">
    <%= f.text_area :body, placeholder: "New body..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>